@model TaxCalculator.Domain.TaxRate

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-tag"></span>
        @Model.Description
    </div>

    @if (Model.Items != null)
    {
        <div class="panel-body">
            @foreach (var item in Model.Items)
            {
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span class="fa fa-tag"></span>
                            @item.Description
                        </div>
                        <div class="panel-body">
                            @if (item.Thresholds != null)
                            {
                                <table class="table table-striped table-condensed margin-bottom-0">
                                    <thead>
                                        <tr>
                                            <th>Start</th>
                                            <th>End</th>
                                            <th>Rate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var threshold in item.Thresholds)
                                        {
                                            <tr>
                                                <td>@threshold.Start.ToString("C")</td>
                                                <td>@(threshold.End.HasValue ? threshold.End.Value.ToString("C") : string.Empty)</td>
                                                <td>@threshold.Rate.ToString("p")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
